#!/usr/bin/gawk -f
#####################################
######  Recode Alleles 1-2 ##########
######         to          ##########
######    Alleles A-B      ##########
#####################################

BEGIN {FS=" ";OFS=" "} 
{
for (i=7;i<=NF;i++) 
{
 if($i==1) $i="A"; 
 if($i==2) $i="B"; 
 if($i==0) $i=0
} 
print
}

