#!/usr/bin/gawk -f
#####################################
######  Recode Alleles A-B ##########
######         to          ##########
######    Alleles 1-2      ##########
#####################################

BEGIN {FS=" ";OFS=" "} 
{
for (i=7;i<=NF;i++) 
{
 if($i=="A") $i=1; 
 if($i=="B") $i=2; 
 if($i=="0") $i=0
} 
print
}
